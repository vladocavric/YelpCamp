<%- include("partials/header") %>
<%- include("partials/nav") %>
<div class="container">
    <div class="jumbotron">
        <h1>welcome to pizza place!!!!</h1>
        <br>
        <br>
    </div>

    <%- include("partials/form") %>
    <br>
    <br>

    <div class="row d-flex flex-wrap">
        <div class="col-12 text-center mb-5">
            <h2>most popular pizza places</h2>
        </div>
        <% pizzerias.forEach(pizza => { %>
        <a class="col-sm-12 col-md-6 col-lg-3 text-center mb-5" href="/pizzeria/<%= pizza._id%>">
            <div class="card col-12" style="height: 100%;">
                <img class="card-img-top mt-2" src="<%= pizza.img %> " alt="">
                <div class="card-body ">
                    <h3 class="card-text"><%= pizza.name %> </h3>
                </div>
            </div>
        </a>
        <% }) %>
    </div>
</div>
<%- include("partials/footer") %>



