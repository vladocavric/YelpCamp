<%- include("../partials/header") %>
<%- include("../partials/nav") %>
<div class="container">
    <div class="jumbotron">
        <h1>add comment here for <%= pizzeria.name %></h1>
    </div>
    <form action="/pizzeria/<%= pizzeria._id%>/comments" method="post" class="my-3">
        <input type="text" name="comment[text]" id="text" class="col-12 mb-5 form-control-lg" placeholder="Text" required>
        <input type="text" name="comment[author]" id="author" class="col-12 mb-5 form-control-lg" placeholder="Author" required>
        <input type="submit" value="submit" class="btn btn-success">
    </form>
    <a href="/pizzeria/<%= pizzeria._id%>">Go back to <%= pizzeria.name %></a>
</div>


